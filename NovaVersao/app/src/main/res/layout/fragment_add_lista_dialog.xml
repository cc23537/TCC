<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddListaDialogFragment">

    <TextView
        android:id="@+id/txtAddC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="156dp"
        android:fontFamily="@font/allerta"
        android:text="ADICIONAR MATÃ‰RIAS"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="339dp"
        android:layout_height="341dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.522">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNomeAddCompra"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_rounded"
            android:fontFamily="@font/adlam_display"
            android:hint="Nome"
            android:textSize="16sp"
            android:typeface="serif"
            app:circularflow_defaultRadius="10dp"
            app:circularflow_radiusInDP="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAddC" />


        <EditText
            android:id="@+id/edtDataCompra"
            android:layout_width="168dp"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_rounded"
            android:fontFamily="@font/adlam_display"
            android:hint="Data"
            android:textSize="16sp"
            android:typeface="serif"
            app:circularflow_defaultRadius="10dp"
            app:circularflow_radiusInDP="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <EditText
            android:id="@+id/edtDescCompra"
            android:layout_width="168dp"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/border_rounded"
            android:fontFamily="@font/adlam_display"
            android:hint="Qnt."
            android:textSize="16sp"
            android:typeface="serif"
            app:circularflow_defaultRadius="10dp"
            app:circularflow_radiusInDP="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAddC" />

        <Button
            android:id="@+id/btnAddC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/border_button"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/allerta"
            android:text="ADICIONAR"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>